{
  "name": "sample",
  "version": "1.0.0",
  "description": "sample app",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^38.1.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.example.sampleapp",
    "productName": "SampleApp",
    "directories": {
        "output": "dist"
    },
    "files": [
        "**/*",
        "!.gitignore",
        "!docs/**",
        "!dist/**",
        "!package.json",
        "!package-lock.json",
        "!**/*.sh",
        "!**/*.map",
        "!**/*.md",
        "!**/test{,s}/**",
        "!**/node_modules/*/{test,__tests__}/**",
        "!**/node_modules/*/*.map"
    ],
    "win": {
        "target": "nsis",
        "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false
    }
  }
}
